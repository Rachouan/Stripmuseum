<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samcastaigne.stripmuseumdemo2" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MyComicMenu"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".BestelScherm"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".TeaserScherm"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.samcastaigne.stripmuseumdemo2.MainActivity" />
        </activity>

        <activity android:name=".RoomGalleryScherm"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".RoomMenuScherm"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ItemDetailsScherm"
            android:screenOrientation="portrait">
        </activity>
        </application>

</manifest>
