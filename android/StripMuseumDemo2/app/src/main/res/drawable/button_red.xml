<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:androd="http://schemas.android.com/apk/res/android">
    <item androd:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/buttonColorRed"/>
            <corners android:radius="50dip"/>
            <size android:height="1dp"
                android:width="1dp"/>
            <padding android:left="0dip" android:top="0dip" android:right="0dip" android:bottom="0dip" />
        </shape>
    </item>
    <item androd:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/buttonColorRedPressed"/>
            <corners android:radius="50dip"/>
            <size android:height="1dp"
                android:width="1dp"/>
            <padding android:left="0dip" android:top="0dip" android:right="0dip" android:bottom="0dip" />
        </shape>
    </item>
</selector>