            android:textAlignment="center"
            android:id="@+id/textView2"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="x"
            android:id="@+id/button2" />

    </LinearLayout>




       <ScrollView
