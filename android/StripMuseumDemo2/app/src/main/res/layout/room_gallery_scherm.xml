                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="180dp"
                           android:src="@drawable/tintin_moon_small"
                           android:layout_weight="0.33"
                           android:padding="5dp"/>
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="180dp"
                           android:src="@drawable/tintin_moon_small"
                           android:layout_weight="0.33"
